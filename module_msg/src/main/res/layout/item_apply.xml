<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="apply"
            type="com.ut.module_msg.model.ApplyMessage" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_80dp"
        android:paddingLeft="@dimen/base_20dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/base_40dp"
            android:layout_height="@dimen/base_40dp"
            android:src="@mipmap/default_icon_b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:url="@{apply.url}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_20dp"
            android:text="@{apply.time}"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/base_10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_22dp"
            android:text="@{apply.name}"
            android:textColor="@color/color_base_title"
            android:textSize="@dimen/base_14sp"
            app:layout_constraintBottom_toTopOf="@id/hint"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{apply.hint}"
            android:textColor="#999999"
            android:textSize="@dimen/base_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#dfdfdf"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>

</layout>

