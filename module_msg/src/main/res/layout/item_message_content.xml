<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="lockMessageInfo"
            type="com.ut.database.entity.LockMessageInfo" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_2dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base_20dp"
        android:paddingRight="@dimen/base_20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_44dp">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#EBEFF1"
                android:gravity="center"
                android:padding="@dimen/base_4dp"
                android:text="@{lockMessageInfo.createTimeFormat()}"
                android:textColor="@color/gray9"
                android:textSize="@dimen/base_10dp" />
        </FrameLayout>


        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/base_104dp"
            android:layout_margin="@dimen/base_2dp"
            app:cardCornerRadius="@dimen/base_10dp"
            app:cardElevation="@dimen/base_1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/base_20dp"
                android:paddingTop="@dimen/base_30dp"
                android:paddingRight="@dimen/base_20dp"
                android:paddingBottom="@dimen/base_30dp"
                android:text="@{lockMessageInfo.description}"
                android:textColor="@color/color_base_text"
                android:textSize="@dimen/base_14sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>
