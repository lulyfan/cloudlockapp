<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <data>

        <variable
            name="presenter"
            type="com.ut.module_msg.fragment.MsgFragment.Present" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/base_35dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_44dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            app:tabGravity="center"
            app:tabIndicatorColor="#00BBD2"
            app:tabSelectedTextColor="#00BBD2"
            app:tabTextColor="@color/color_base_title"
            android:elevation="@dimen/base_2dp"
            android:layout_marginBottom="@dimen/base_2dp">

        </android.support.design.widget.TabLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabs_bar"
            app:layout_constraintVertical_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
