<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="notification"
            type="com.ut.module_msg.model.NotificationMessage" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_80dp"
        android:paddingLeft="@dimen/base_20dp"
        android:background="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground">

        <FrameLayout
            android:id="@+id/icon_layout"
            android:layout_width="@dimen/base_52dp"
            android:layout_height="@dimen/base_62dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/base_40dp"
                android:layout_height="@dimen/base_40dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/default_icon_a"
                app:url="@{notification.icon}" />

        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_12dp"
            android:text="@{notification.title}"
            android:textColor="@color/color_base_title"
            android:textSize="@dimen/base_14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintLeft_toRightOf="@id/icon_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{notification.content}"
            android:textColor="#999999"
            android:textSize="@dimen/base_12sp"
            android:textStyle="normal"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_20dp"
            android:text="@{notification.time}"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/base_10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dfdfdf"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
