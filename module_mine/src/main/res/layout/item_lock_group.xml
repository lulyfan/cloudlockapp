<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <data>
        <variable
            name="lockGroupItem"
            type="com.ut.module_mine.LockGroupActivity.LockGroupData"/>
    </data>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/border_margin"
    android:paddingRight="@dimen/border_margin"
    android:background="@drawable/select_gray_e">

    <TextView
        android:id="@+id/lockGroupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text='@{lockGroupItem.name + " (" + lockGroupItem.lockCount + ")"}'
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawableRight="@drawable/arrow_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
</layout>