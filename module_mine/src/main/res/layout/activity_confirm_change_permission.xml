<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.ut.module_mine.viewModel.ConfirmChangePermissionViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ConfirmChangePermissionActivity"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_white"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/base_70dp"
            android:layout_height="@dimen/base_70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.114"
            app:srcCompat="@drawable/headimg"
            app:imageUrl="@{viewModel.receiverHeadImgUrl}"
            app:isCircle="@{true}"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.receiverName}"
            android:textColor="@color/gray3"
            android:textSize="@dimen/l"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_phone"
            android:padding="3dp"
            android:text="@{viewModel.receiverPhone}"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/xxs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.ut.base.customView.CheckCodeView
            android:id="@+id/checkCodeView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_70dp"
            android:layout_marginTop="16dp"
            app:length="6"
            app:itemWidth="@dimen/base_54dp"
            app:itemMargin="@dimen/base_10dp"
            app:textColor="@color/gray3"
            app:background="@drawable/bg_checkcodeview"
            app:selectedBackground="@drawable/bg_checkcodeview_selected"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/transformLockTip"
            android:textColor="@color/tipColor"
            android:textSize="@dimen/xs"
            app:layout_constraintStart_toStartOf="@+id/checkCodeView"
            app:layout_constraintTop_toBottomOf="@+id/checkCodeView" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56s 重新发送"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/s"
            style="@style/styleGrayE"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/checkCodeView"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/select_bg_bt"
            android:enabled="false"
            android:text="@string/ensure"
            android:textColor="@android:color/white"
            android:textSize="@dimen/m"
            app:layout_constraintEnd_toEndOf="@+id/checkCodeView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/checkCodeView"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />
    </android.support.constraint.ConstraintLayout>
</layout>