<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pick_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_15dp"
        android:paddingBottom="@dimen/base_15dp">


        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_15dp"
            android:layout_marginLeft="@dimen/base_15dp"
            style="@style/styleGrayE"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:srcCompat="@drawable/mine_close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/validTime"
            android:textColor="@color/gray3"
            android:textSize="@dimen/m"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_15dp"
            android:layout_marginRight="@dimen/base_15dp"
            android:text="@string/confirm"
            android:textColor="@color/gray3"
            android:textSize="@dimen/s"
            style="@style/styleGrayE"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title" />
    </android.support.constraint.ConstraintLayout>

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wheel_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pick_head"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_indicator_color="@android:color/darker_gray"
        app:wheel_indicator_size="2dp"
        app:wheel_item_space="8dp"
        app:wheel_item_text_size="20sp"
        app:wheel_selected_item_text_color="@android:color/black"
        app:wheel_visible_item_count="9"/>
</android.support.constraint.ConstraintLayout>