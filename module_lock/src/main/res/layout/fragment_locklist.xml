<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="presenter"
            type="com.ut.module_lock.fragment.LockListFragment.Present"/>
    </data>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:paddingTop="@dimen/base_35dp"
        >

        <TextView
            android:id="@+id/lock_tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableRight="@mipmap/icon_down_arrow"
            android:drawablePadding="@dimen/base_10dp"
            android:focusable="true"
            android:maxLength="6"
            android:onClick="@{presenter::onGroupClick}"
            android:text="@string/lock_group_all"
            android:textColor="@android:color/white"
            android:textSize="@dimen/base_23dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/lock_tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lock_bg_search"
            android:clickable="true"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="@dimen/base_10dp"
            android:focusable="true"
            android:onClick="@{presenter::onSearchClick}"
            android:paddingLeft="@dimen/base_23dp"
            android:paddingTop="@dimen/base_6dp"
            android:paddingRight="@dimen/base_23dp"
            android:paddingBottom="@dimen/base_6dp"
            android:text="@string/lock_search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/base_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/lock_tv_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lock_tv_group"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="@{presenter::onAddClick}"
            android:src="@mipmap/icon_add"
            app:layout_constraintBottom_toBottomOf="@+id/lock_tv_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lock_tv_search"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/base_60dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lock_rv_lock"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/base_10dp"
            android:paddingRight="@dimen/base_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3">

        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>
</layout>
