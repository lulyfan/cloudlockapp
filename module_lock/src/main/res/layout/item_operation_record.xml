<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_44dp"
        android:gravity="center"
        android:textColor="@color/color_base_text"
        android:textSize="@dimen/base_10dp" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_20dp"
        android:paddingRight="@dimen/base_20dp"
        android:layout_marginLeft="@dimen/base_20dp"
        android:layout_marginRight="@dimen/base_20dp"
        android:background="@drawable/shape_bg_corner"
        android:layout_marginBottom="@dimen/base_6dp"
        android:orientation="vertical"/>

</LinearLayout>