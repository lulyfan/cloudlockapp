<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tv_device_key_time"
        android:paddingLeft="@dimen/base_8dp"
        android:paddingTop="@dimen/base_3dp"
        android:paddingRight="@dimen/base_8dp"
        android:paddingBottom="@dimen/base_3dp"

        android:text="@string/limit_time"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/base_20dp"
        android:background="@color/lock_color_btn_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>