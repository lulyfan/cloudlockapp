<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="lockKey"
            type="com.ut.module_lock.entity.LockKey"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/toolbar_green"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_left_right_bottom_corner"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_device_id"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:id="@+id/tv_device_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_53dp"
                    android:text="@{lockKey.name}"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_17sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_base_divider" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_device_mac"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:id="@+id/tv_device_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_53dp"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_17sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_base_divider" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_power"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:id="@+id/tv_device_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_53dp"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_17sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_base_divider" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_valid_date"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:id="@+id/tv_device_valid_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_53dp"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_17sp" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_17dp"
            android:background="@drawable/shape_bg_corner"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/layout_lock_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_name"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_27dp"
                    android:drawableRight="@mipmap/more_black"
                    android:drawablePadding="@dimen/base_10dp"
                    android:textColor="@color/color_base_title"
                    android:textSize="@dimen/base_17sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="@color/color_base_divider" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/layout_choose_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_70dp"
                android:paddingLeft="@dimen/base_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/lock_choose_group"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/base_27dp"
                    android:drawableRight="@mipmap/more_black"
                    android:drawablePadding="@dimen/base_10dp"
                    android:textColor="@color/color_base_title"
                    android:textSize="@dimen/base_17sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</layout>

