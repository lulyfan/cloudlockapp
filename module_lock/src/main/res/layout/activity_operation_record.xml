<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="operationRecord"
            type="com.ut.module_lock.entity.OperationRecord" />
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_44dp"
            android:background="#00BDCF"
            android:paddingLeft="@dimen/base_20dp"
            android:paddingRight="@dimen/base_20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/base_32dp"
                android:layout_height="@dimen/base_32dp"
                android:padding="@dimen/base_6dp"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_back"
                android:src="@mipmap/back_white" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:text="@string/lock_operation_record"
                android:textSize="@dimen/base_17sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/operation_record_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:layout_marginBottom="@dimen/base_10dp" />

    </LinearLayout>
</layout>
