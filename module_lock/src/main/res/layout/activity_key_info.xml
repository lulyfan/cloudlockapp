<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="keyItem"
            type="com.ut.module_lock.entity.KeyItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_44dp"
            android:background="#00BDCF"
            android:paddingLeft="@dimen/base_20dp"
            android:paddingRight="@dimen/base_20dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/base_32dp"
                android:layout_height="@dimen/base_32dp"
                android:padding="@dimen/base_6dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_btn_back"
                android:src="@mipmap/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lock_key_info"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/base_17sp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/more" />
        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F9FB"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/info_part1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_left_right_bottom_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:paddingRight="@dimen/base_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_key_name"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_key_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:drawableRight="@mipmap/more_black"
                            android:drawablePadding="@dimen/base_10dp"
                            android:text="@{keyItem.caption}"
                            android:textColor="#333333"
                            android:textSize="@dimen/base_17sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/base_20dp"
                        android:background="#C7C7CC" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:visibility="@{keyItem.type == 0 || keyItem.type == 1 ? View.VISIBLE : View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_authorize_type"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <TextView
                            android:id="@+id/tv_authorize_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/base_30dp"
                            android:text="@{keyItem.authorizedType}"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_17sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="#C7C7CC" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:paddingRight="@dimen/base_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_key_type"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_key_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="@{keyItem.type == 1 || keyItem.type == 2}"
                            android:text="@{keyItem.typeString()}"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_17sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base_10dp"
                            android:src="@mipmap/more_black"
                            android:visibility="@{keyItem.type ==1 ? View.VISIBLE : View.INVISIBLE}" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/base_20dp"
                        android:background="#C7C7CC" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:paddingRight="@dimen/base_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_accept_time"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_accept_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/base_30dp"
                            android:text="@{keyItem.acceptTime}"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_17sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/info_part2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_bg_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:paddingRight="@dimen/base_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_sender"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@mipmap/more_black"
                            android:drawablePadding="@dimen/base_10dp"
                            android:text="@{keyItem.sender}"
                            android:textColor="#333333"
                            android:textSize="@dimen/base_17sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/base_20dp"
                        android:background="#C7C7CC" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_70dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/base_20dp"
                        android:paddingRight="@dimen/base_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/lock_send_time"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_sender_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/base_30dp"
                            android:text="@{keyItem.sendTime}"
                            android:textColor="#666666"
                            android:textSize="@dimen/base_17sp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/operation_record"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_70dp"
                    android:layout_marginTop="@dimen/base_10dp"
                    android:background="@drawable/shape_bg_corner"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/base_20dp"
                    android:paddingRight="@dimen/base_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/lock_operation_record"
                        android:textColor="#666666"
                        android:textSize="@dimen/base_14sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/more_black" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_delete_key"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_50dp"
                    android:layout_marginTop="@dimen/base_93dp"
                    android:layout_marginBottom="@dimen/base_20dp"
                    android:layout_marginLeft="@dimen/base_20dp"
                    android:background="@drawable/shape_btn_delete_key"
                    android:textColor="@android:color/white"
                    android:text="@string/lock_delete_key"
                    android:textSize="@dimen/base_17sp"
                    android:layout_marginRight="@dimen/base_20dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>
