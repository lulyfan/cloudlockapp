    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#00CFE6" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="#00BDD2" />
        </shape>
    </item>
</selector>